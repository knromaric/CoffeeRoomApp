<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoffeeRoom.Pages.SubMenuPage">
    <ContentPage.Content>
        <ListView SeparatorVisibility="None" HasUnevenRows="True" x:Name="LvSubMenu">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid>
                            <Image HeightRequest="260" Source="{Binding Image}" Aspect="AspectFill"/>
                            <BoxView BackgroundColor="Black" Opacity="0.4" />
                            <StackLayout HorizontalOptions="Start" VerticalOptions="End" Margin="5">
                                <Label Text="{Binding Name}" TextColor="Yellow" FontAttributes="Bold" FontSize="Large"/>
                                <Label Text="{Binding Price}" TextColor="white"  FontSize="Medium"/>
                                <Label Text="{Binding Description}" TextColor="white"  FontSize="Small" />
                            </StackLayout>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>